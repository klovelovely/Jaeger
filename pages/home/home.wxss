/* pages/home/home.wxss */

/* weui demo 定制样式 */
.weui-flex {
    text-align: center;
}

.weui-flex > view,
.weui-flex > .weui-flex__item,
.weui-flex > .placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 10rpx;
    background: #f5f5f5;
    color: #404040;
}

/* 微信登录用户信息 */
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 130px;
    margin-bottom: 15px;
}

.userinfo > .avatar {
    width: 60rpx;
    height: 60rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo > .nickname {
    color: #aaa;
    font-size: 14px;
    line-height: 30px;
}

.userinfo > .motto {
    margin: 10rpx;
    text-align: center;
}